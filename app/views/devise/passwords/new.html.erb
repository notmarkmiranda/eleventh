<div class="row form-row">
  <div class="four columns main-form">
    <h2>Reset password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'u-full-width' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'u-full-width' %>
      </div>

      <div class="actions">
        <%= f.submit "reset password", class: "button button-primary u-full-width" %>
      </div>
    <% end %>

      <%= render "devise/shared/links" %>  
  </div>
</div>

